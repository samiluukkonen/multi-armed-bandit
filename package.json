{
  "name": "multi_armed_bandit",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "s": "yarn start",
    "build": "run-s clean parcel:build",
    "parcel:build": "parcel build --experimental-scope-hoisting ./public/index.html",
    "start": "parcel serve --port 3000 ./public/index.html",
    "clean": "rm -rf ./dist",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:tsc": "tsc --project .",
    "lint:ts": "prettier --check --parser typescript --config package.json 'src/**/*.ts*'",
    "lint:json": "prettier --check '**/*.json'"
  },
  "engines": {
    "node": "^14.15.3"
  },
  "dependencies": {
    "@nivo/bar": "^0.67.0",
    "@nivo/core": "^0.67.0",
    "@nivo/line": "^0.67.0",
    "@nivo/scatterplot": "^0.67.0",
    "@nivo/stream": "^0.67.0",
    "classnames": "^2.2.6",
    "jstat": "^1.9.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/d3-color": "^2.0.1",
    "@types/d3-scale-chromatic": "^2.0.0",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-motion": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-react": "^7.21.5",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
